.re-tile
    width auto
    display flex
    padding 20px
    border-radius 10px
    background-size cover
    cursor pointer
    transition all 0.5s
    &:hover
        transform scale(1.5)

.re-tile__image
    max-width 100%

.re-presents-field
    position fixed
    left 0
    right 0
    top 0
    bottom 0
    display flex
    min-width 100%
    min-height 100%
    flex-direction column
    justify-content flex-end

.re-presents-field-row
    display flex
    justify-content flex-start
    position relative
    &._space-between
        justify-content space-between
    &._space-around
        justify-content space-around

.re-hide
    visibility hidden
    opacity 0

.re-disply-flex
    display flex

.re-image
    max-width 100%

.re-content
    flex-grow 1
    &._tree-bg
        background-repeat no-repeat
        background-size 379px 600px
        background-position center -3%
        background-image url(../../image/tree-gift.png)
        transition 0.5s background-position
        &._move-to-right
            background-position 90% -3%

.re-present
    cursor pointer
    display flex
    align-items center
    transition 0.3s all
    user-select none
    &:hover
        z-index 1
        transform scale(1.2)!important

.re-present__image
    transition 1s all

.re-present__image:hover,
.re-present__image:active
    transform scale(1.2)
    z-index 1

.bounce
    -webkit-animation-name bounce
    animation-name bounce

.animated
    -webkit-animation-duration 1s
    animation-duration 1s

.re-gift
    display flex
    align-items center
    justify-content center
    flex-grow 1
    position absolute
    width 100%
    height 100%
    left 0
    top 0
    transition 0.3s all

.re-gift
    &._letter
        z-index 10
        transition 2s

.re-gift__particles
    position absolute
    left 0
    top 0
    width 100%
    height 100%

.re-gift__bg-blur
    background-color rgba(255,255,255,.6)
    backdrop-filter blur(5px)

.re-gift__content
    margin-top 100px

.re-gift__bg
    position absolute
    left 0
    top 0
    right 0
    bottom 0
    overflow hidden
    background-color #fef6e1
    z-index -1

.re-gift__title
    text-align center
    pointer-events none
    height 220px
    position relative

.re-gift__circle
    left 0
    top 0
    bottom 0
    right 0
    margin auto
    background url(../../image/circles.png) center center no-repeat
    background-size contain
    position absolute

.re-gift__tree
    background url(../../image/tree-gift.png) center center no-repeat
    background-size contain
    width 630px
    height 850px
    position absolute
    margin auto
    top 0
    bottom 0
    left 0
    right 0

.re-gift__circle-center
    max-height 100%
    max-width 100%
    height 480px
    width 480px
    border-radius 50%
    background #ffeec2
    position absolute
    left 0
    top 0
    bottom 0
    right 0
    margin auto

.re-gift__tree-stars-l
    height 750px
    width 350px
    background url(../../image/stars-3.png) no-repeat
    background-size contain
    top -164px
    left -250px
    position absolute

.re-gift__tree-stars-r
    height 750px
    width 350px
    background url(../../image/stars-4.png) no-repeat
    background-size contain
    top -164px
    right -250px
    position absolute

.re-gift__lt
    background url(../../image/gingle-bells-1.png) no-repeat
    background-size contain
    width 400px
    height 330px
    position absolute
    left -19px
    top -18px

.re-gift__star-lt
    background url(../../image/stars-2.png) no-repeat
    background-size contain
    width 200px
    height 200px
    position absolute
    left 85px
    top 140px

.re-gift__star-lb
    background url(../../image/stars-1.png) no-repeat
    background-size contain
    width 200px
    height 200px
    transform translate(-450px, 100px)
    position absolute
    left 0
    top 0
    bottom 0
    right 0
    margin auto

.re-gift__rt
    background url(../../image/gingle-bells-2.png) no-repeat
    background-size contain
    width 400px
    height 330px
    position absolute
    right -10px
    top -30px

.re-gift__lb
    background url(../../image/gingle-bells-3.png) no-repeat
    background-size contain
    width 400px
    height 330px
    position absolute
    left 0px
    bottom 0px

.re-gift__rb
    // background url(../../image/gift-present.png) no-repeat
    background-size cover
    width 300px
    height 330px
    position absolute
    right -20px
    bottom -55px

.re-gift-action
    background url(../../image/action.png) -35px center no-repeat
    background-size cover
    width 626px
    height 318px
    display flex
    align-items center
    justify-content center
    color #fff
    cursor pointer

.re-gift-action__text
    font-family 'playlistscript'
    font-size 68px
    padding-left 0px
    padding-bottom 20px
    padding-left 25px
    user-select none

.re-title
    font-family playlistscript
    font-size 60px
    user-select none
    &._color-red
        color #d43e2c
    &._size-m
        font-size 110px

.re-envelop-wrapper
    left 0
    top 0
    position fixed

.re-letter
    padding 26px
    background #fff
    min-height 400px
    display flex
    flex-direction column
    transition 0.7s all
    transform translateY(260px)

.re-letter__wrapper
    border solid 2px #efcbab
    padding 0 45px
    padding-bottom 25px
    position relative
    flex-grow 1
    &._top
        padding-top 75px

.re-letter__header
    position absolute
    left 0
    top 0
    right 0
    margin auto
    padding-top 0
    display flex
    justify-content space-between

.re-letter__header-lt
    background url(../../image/letter-lt.png) no-repeat
    background-size contain
    width 117px
    height 117px

.re-letter__header-rt
    background url(../../image/letter-rt.png) no-repeat
    background-size contain
    width 117px
    height 117px

.re-letter__header-middle
    background url(../../image/letter-star.png) no-repeat
    background-size contain
    width 120px
    height 60px

.re-letter__content
    text-align center
    font-size 50px

.re-envelop
    position absolute
    width 693px
    height 620px
    margin-top 31px
    user-select none

.re-envelop__background
    background url(../../image/letter-2.png) no-repeat
    background-size contain
    width 100%
    width 697px
    height 710px
    z-index 1
    position absolute
    top -13px

.re-envelop__foreground
    background url(../../image/letter-1.png) no-repeat
    background-size contain
    width 100%
    height 450px
    z-index 3
    position absolute
    bottom 0
    left 0

.re-envelop__tries
    bottom 110px
    position absolute
    text-align center
    left 0
    right 0
    margin auto
    font-size 92px
    color #fff

.re-envelop__background-shadow
    position absolute
    top 203px
    left 20px
    -webkit-box-shadow 0px 0px 3px 0px rgba(169, 94, 85, 1)
    -moz-box-shadow 0px 0px 3px 0px rgba(169, 94, 85, 1)
    box-shadow 0px 0px 3px 0px rgba(169, 94, 85, 1)
    right 20px
    height 1px
    background rgba(169, 94, 85, 0.3)
    z-index 0

.re-envelop__content
    z-index 2
    position absolute
    bottom 0
    margin-bottom 81px
    margin-left 18px
    width 660px
    min-height 536px
    overflow hidden
