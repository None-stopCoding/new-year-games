                -4px  0   0   #FFFFFF,
                4px  0   0   #FFFFFF,
                -1px -4px 0   #FFFFFF,
                1px -4px 0   #FFFFFF,
                -1px  4px 0   #FFFFFF,
                1px  4px 0   #FFFFFF,
                -4px -1px 0   #FFFFFF,
                4px -1px 0   #FFFFFF,
                -4px  1px 0   #FFFFFF,
                4px  1px 0   #FFFFFF,
                -2px -4px 0   #FFFFFF,
                2px -4px 0   #FFFFFF,
                -2px  4px 0   #FFFFFF,
                2px  4px 0   #FFFFFF,
                -4px -2px 0   #FFFFFF,
                4px -2px 0   #FFFFFF,
                -4px  2px 0   #FFFFFF,
                4px  2px 0   #FFFFFF,
                -3px -4px 0   #FFFFFF,
                3px -4px 0   #FFFFFF,
                -3px  4px 0   #FFFFFF,
                3px  4px 0   #FFFFFF,
                -4px -3px 0   #FFFFFF,
                4px -3px 0   #FFFFFF,
                -4px  3px 0   #FFFFFF,
                4px  3px 0   #FFFFFF,
                -4px -4px 0   #FFFFFF,
                4px -4px 0   #FFFFFF,
                -4px  4px 0   #FFFFFF,
                4px  4px 0   #FFFFFF,
                -4px -4px 0   #FFFFFF,
                4px -4px 0   #FFFFFF,
                -4px  4px 0   #FFFFFF,
                4px  4px 0   #FFFFFF;
        &._future
            color: #ff3737;
            text-shadow:
                -0   -1px 0   rgba(255,255,255, 0.6),
                0   -1px 0   rgba(255,255,255, 0.6),
                -0    1px 0   rgba(255,255,255, 0.6),
                0    1px 0   rgba(255,255,255, 0.6),
                -1px -0   0   rgba(255,255,255, 0.6),
                1px -0   0   rgba(255,255,255, 0.6),
                -1px  0   0   rgba(255,255,255, 0.6),
                1px  0   0   rgba(255,255,255, 0.6),
                -1px -1px 0   rgba(255,255,255, 0.6),
                1px -1px 0   rgba(255,255,255, 0.6),
                -1px  1px 0   rgba(255,255,255, 0.6),
                1px  1px 0   rgba(255,255,255, 0.6),
                -1px -1px 0   rgba(255,255,255, 0.6),
                1px -1px 0   rgba(255,255,255, 0.6),
                -1px  1px 0   rgba(255,255,255, 0.6),
                1px  1px 0   rgba(255,255,255, 0.6);


    &__field
        flex-grow: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        &-main
            position: relative;
        &._column-direction
            flex-direction: column
    &__toggler
        &._right
            text-align: right;

    &__hint
        position: absolute;
        margin: auto;
        display: flex;
        align-items: flex-end;
        justify-content: center;
        flex-direction: column;

    &__meta-board
        color: #fff;
        margin-top: 40px;
        background: #ffb01f6b;
        padding: 30px;
        font-size: 32px;

    &__container
        &._present
            width: 55vw;
            height: 75vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            margin: auto;
            padding: 25px;
            background: rgba(173,216,230, 0.9);
            border-radius: 20px;

    &__Riddles
        &-row
            display: flex;
            margin: 15px 0;
        &-answer
            flex: 1;
            display: flex;
            justify-content: flex-end;
            align-items: center;
        &-input
            display: block;
            margin: 10px 0;
            padding: 10px;
            box-sizing: border-box;
            border: none;
            border-radius: 10px;
            outline: 1px solid #eee;
            transition: .3s border-color;
            height: 45px;
            width: 300px;

            &:hover, &:focus
                outline: 3px solid #aaa;

        &-submit
            margin-left: 10px;
            height: 45px;
            border-radius: 5px;
            background: #ffe5b4;

.re-toggler
    color: #fff;
    cursor: pointer;
    text-shadow: 0 0 5px #000;
    &._hint
        position: relative;
        overflow: hidden;
        display: inline-flex;
        padding: 5px;
        &:before
            content: '';
            width: 100%;
            height: 1px;
            background: #fff;
            position: absolute;
            transform: translateX(-105%);
            bottom: 3px;
            transition: 0.3s transform;
        &:hover
            &:before
                transform: translateX(0%);

        text-shadow: 0 -1px 0 rgba( 86, 85, 160, 0.74 ),
                     0 -1px 0 rgba( 86, 85, 160, 0.74 ),
                     0 1px 0 rgba( 86, 85, 160, 0.74 ),
                     0 1px 0 rgba( 86, 85, 160, 0.74 ),
                     -1px 0 0 rgba( 86, 85, 160, 0.74 ),
                     1px 0 0 rgba( 86, 85, 160, 0.74 ),
                     -1px 0 0 rgba( 86, 85, 160, 0.74 ),
                     1px 0 0 rgba( 86, 85, 160, 0.74 ),
                     -1px -1px 0 rgba( 86, 85, 160, 0.74 ),
                     1px -1px 0 rgba( 86, 85, 160, 0.74 ),
                     -1px 1px 0 rgba( 86, 85, 160, 0.74 ),
                     1px 1px 0 rgba( 86, 85, 160, 0.74 ),
                     -1px -1px 0 rgba( 86, 85, 160, 0.74 ),
                     1px -1px 0 rgba( 86, 85, 160, 0.74 ),
                     -1px 1px 0 rgba( 86, 85, 160, 0.74 ),
                     1px 1px 0 rgba( 86, 85, 160, 0.74 )

@media (max-height: 850px)

    .re-scene
        &__ghost-image
            max-height: 500px

    .re-gift
        &__preview-person
            display: flex;
            justify-content: center;
            align-items: center;

    .re-game
        &__title
            font-size: 32px;
            &._past
                padding: 25px;
            &._present
                font-size: 75px;

    .re-message
        &._modern
            & ^[0]__text
                font-size: 18px;
